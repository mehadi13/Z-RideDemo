<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mehadihossain.z_ridedemo.MainActivity">


    <fragment
        android:id="@+id/header_fragment"
        android:name="com.example.mehadihossain.z_ridedemo.fragment.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <fragment
        android:id="@+id/fragment13"
        android:name="com.example.mehadihossain.z_ridedemo.fragment.MenuFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" />
<FrameLayout
    android:id="@+id/body_container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="17">
</FrameLayout>
</LinearLayout>
