    android:orientation="vertical"
    android:background="@drawable/border"
    android:layout_margin="5dp"
    tools:context="com.example.mehadihossain.z_ridedemo.fragment.PlaceListFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
